{
  "name": "mcp-video-recognition",
  "version": "1.0.0",
  "description": "MCP server for Google Gemini image, audio, and video recognition",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:stdio": "TRANSPORT_TYPE=stdio node dist/index.js",
    "start:sse": "TRANSPORT_TYPE=sse node dist/index.js",
    "dev": "tsc -w & node --watch dist/index.js",
    "dev:sse": "tsc -w & TRANSPORT_TYPE=sse PORT=3000 node --watch dist/index.js",
    "debug": "tsc & npx @modelcontextprotocol/inspector node dist/index.js",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "gemini",
    "video",
    "audio",
    "image",
    "recognition",
    "mongodb",
    "url-download",
    "stdio",
    "sse",
    "server-sent-events"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcp_video_recognition.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "mcp": {
    "transports": ["stdio", "sse"],
    "defaultTransport": "stdio",
    "ssePort": 3000,
    "tools": [
      "image_recognition",
      "video_recognition", 
      "audio_recognition"
    ]
  },
  "dependencies": {
    "@google/genai": "^0.9.0",
    "@modelcontextprotocol/sdk": "^1.10.1",
    "express": "^5.1.0",
    "zod": "^3.24.3",
    "mongodb": "^6.3.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "typescript": "^5.8.3",
    "@types/mime-types": "^2.1.4"
  }
}
